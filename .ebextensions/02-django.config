commands:
  00_update_pip:
    command: "sudo /opt/python/run/venv/bin/pip install --upgrade pip"
  01_update_pip:
    command: "sudo chmod a+x wsgi.py"
  02_update_pip:
    command: "find /opt/python/run/venv/local/lib/python3.6/site-packages/django -name '*.py' chmod 0644 {}"
  03_update_pip:
    command: "find /opt/python/run/venv/local/lib/python3.6/site-packages/django -type d chmod 0755 {}"


option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: mysite/wsgi.py
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: mysite.settings